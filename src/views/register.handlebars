<div style="padding: 2rem;">
  <h1>REGISTRO</h1>
</div>
<div class="login-container">
  <div class="login">
    <form class="login-form" action="/api/users" method="post">

      <label for="first_name"> </label>
      <input
        type="text"
        id="first_name"
        name="first_name"
        placeholder="Nombre"
        required
      />
      <label for="last_name"></label>
      <input
        type="text"
        id="last_name"
        name="last_name"
        placeholder="Apellido"
        required
      />
      <label for="email"> </label>
      <input
        type="email"
        id="email"
        name="email"
        placeholder="Email"
        required
      />
      <label for="Password"> </label>
      <input
        type="password"
        id="password"
        name="password"
        placeholder="Contraseña"
        required
      />
      <label for="Age"></label>
      <input type="number" id="age" name="age" placeholder="Edad" required />

      <button type="submit">Registrarme</button>

    </form>
    <div>
      <h3>
        ¿Ya tienes una cuenta?

        <a href="/login">Iniciar Sesión</a>
      </h3>
    </div>
  <button
      class="color-button"
      type="button"
      onclick="window.location.href='http://localhost:8080/'"
    >
      Ir a Inicio
    </button>
  </div>
</div>