 {{>header}}

<h1>Productos Paginate</h1>

{{#if user}}
  <div class="card-Bienvenido">
    <h3>¡Bienvenido {{user.first_name}} {{user.last_name}}!</h3>
    <p>Email: {{user.email}}</p>
    <p>Role: {{user.role}}</p>

    <button>
    <a href="/api/sessions/logout" style="color: #c5d81c;">Cerrar Sesion</a>
    </button>
      
  </div>

{{/if}}


<div id="product-container">
  {{#each products}}
    <div class="card">
      <img src="{{this.thumbnail}}" class="card-img-top" alt="{{this.title}}" />
      <p>Title: {{this.title}}</p>
      <p>Description: {{this.description}}</p>
      <p>Price: $ {{this.price}}</p>
      <p>Category: {{this.category}}</p>
        <button onclick="addToCart('{{this._id}}')">Agregar al Carrito</button>
    </div>
  {{/each}}
</div>
<div id="message-container"></div>
<div id="pagination">
  {{#if hasNextPage}}
    <a href="/products?page={{nextPage}}">Siguiente</a>
  {{/if}}
  {{#if hasPrevPage}}
    <a href="/products?page={{prevPage}}">Anterior</a>
  {{/if}}

</div>

<p>Página actual: {{currentPage}} de {{totalPages}}</p>